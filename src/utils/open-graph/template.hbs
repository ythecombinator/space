<html lang='EN'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />
    <script src='https://cdn.tailwindcss.com'></script>
  </head>
  <body id='body' class='bg-gradient-to-tr from-purple-900 via-black to-indigo-800 text-gray-100'>
    <div
      class='relative flex flex-col justify-between p-16 backdrop-blur-3xl backdrop-brightness-150 bg-black/30'
      style='width: 1200px; height: 630px'
    >
      <div class='max-w-screen-lg space-y-2'>
        <h1 class='text-7xl font-bold leading-[1.3]'>
          {{title}}
        </h1>
      </div>
      <div class='flex justify-between'>
        <div class='flex items-center space-x-6'>
          <img src='{{authorPic}}' class='flex-none w-24 h-24 border-4 border-gray-200 rounded-full' />
          <div class='flex flex-col gap'>
            <p class='mb-1 text-3xl font-semibold font-source-sans-pro'>
              {{authorName}}
            </p>
            <p class='text-2xl font-semibold tracking-wide font-open-sans'>
              <span>{{authorBio}}</span>
            </p>
            <p class='text-2xl font-semibold tracking-wide font-source-sans-pro'>
              {{authorTwitter}}
            </p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>